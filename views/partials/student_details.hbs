<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">Edit Profile</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">

        </div>
        <div class="col-md-6">
            <form>
                <div class="form-group"> <label for="name"> Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter Name" name="name"
                        required>
                </div>
                <div class="form-group">
                    <label for="admno">Adm No</label> <input type="text" class="form-control" id="admno"
                        placeholder="Enter Adm No" name="admno" required>
                </div>

                <div class="form-group"> <label for="date">Date of Admission</label> <input type="date"
                        class="form-control" id="date"  name="dateofadm" required> </div>
                
                <div class="form-group">
                    <div class="col-md-4">
                        <label for="dob">DOB</label>
                        <input type="date" name="dob" id="dob" required>
                    </div>
                    <div class="col-md-4">
                        <label for="age">Age</label>
                        <input type="text" name="age" required>
                    </div>
                    <div class="col-md-4">
                        <label for="sex">Gender</label>
                        <select name="sex" id="sex">
                            <option value="male">M</option>
                            <option value="female">F</option>
                        </select>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Save</button> <button type="reset"
                    class="btn btn-secondary">Cancel</button>
            </form>
        </div>
    </div>

